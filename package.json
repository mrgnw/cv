{
	"name": "morgan-cv",
	"version": "0.0.2",
	"private": true,
	"scripts": {
		"dev": "vite dev --host",
		"build": "vite build",
		"preview": "vite preview",
		"generate": "vite build && bun run preview:background && bun run pdfs && bun run preview:kill",
		"preview:background": "bun run preview & echo $! > .preview.pid",
		"preview:kill": "kill $(cat .preview.pid) && rm .preview.pid",
		"pdfs": "playwright install && bun generate-pdf.js",
		"prev": "vite build && vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"generate:pdfs": "bunx concurrently -k --kill-signal SIGTERM \"bun run preview\" \"bun run pdfs\" && exit 0"
	},
	"devDependencies": {
		"@sveltejs/adapter-cloudflare": "^4.7.2",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.0-next.6",
		"autoprefixer": "^10.4.20",
		"mdsvex": "^0.11.2",
		"svelte": "^5.0.0-next.1",
		"svelte-check": "^4.0.0",
		"svelte-image": "^0.2.9",
		"tailwindcss": "^3.4.9",
		"typescript": "^5.0.0",
		"vite": "^5.0.3"
	},
	"type": "module",
	"dependencies": {
		"@iconify/svelte": "^4.0.2",
		"@sveltejs/adapter-static": "^3.0.5",
		"bits-ui": "^0.21.16",
		"clsx": "^2.1.1",
		"date-fns": "^4.1.0",
		"json5": "^2.2.3",
		"lucide-svelte": "^0.452.0",
		"pdfmake": "^0.2.13",
		"playwright": "^1.48.0",
		"svelte-typewriter": "^3.2.3",
		"tailwind-merge": "^2.5.2",
		"tailwind-variants": "^0.2.1"
	}
}
